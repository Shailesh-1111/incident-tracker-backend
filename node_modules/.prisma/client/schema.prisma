generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Incident {
  id        String    @id
  title     String
  service   String
  severity  Severity
  status    Status    @default(OPEN)
  owner     String?
  summary   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum Severity {
  SEV1
  SEV2
  SEV3
  SEV4
}

enum Status {
  OPEN
  MITIGATED
  RESOLVED
}
